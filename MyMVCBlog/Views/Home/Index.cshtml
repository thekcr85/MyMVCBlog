@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-3 fw-bold mb-4">Welcome to My MVC Blog</h1>
            <p class="lead mb-4">
                Your go-to platform for insightful articles on technology, health, and lifestyle. 
                Discover, read, and engage with content that matters to you.
            </p>
            <div class="d-flex gap-3 justify-content-center mb-5">
                <a asp-action="Index" asp-controller="Post" class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-book"></i> Browse Blog
                </a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-action="Register" asp-controller="Auth" class="btn btn-outline-primary btn-lg px-4">
                        Get Started
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-cpu fs-1 text-primary"></i>
                    </div>
                    <h5 class="card-title fw-bold">Technology</h5>
                    <p class="card-text text-muted">
                        Explore the latest trends in AI, software development, and digital innovation.
                    </p>
                    <a asp-action="Index" asp-controller="Post" asp-route-categoryId="1" class="btn btn-sm btn-outline-primary">View Posts</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-heart-pulse fs-1 text-danger"></i>
                    </div>
                    <h5 class="card-title fw-bold">Health</h5>
                    <p class="card-text text-muted">
                        Discover tips for wellness, fitness, and maintaining a balanced lifestyle.
                    </p>
                    <a asp-action="Index" asp-controller="Post" asp-route-categoryId="2" class="btn btn-sm btn-outline-primary">View Posts</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-sunglasses fs-1 text-warning"></i>
                    </div>
                    <h5 class="card-title fw-bold">Lifestyle</h5>
                    <p class="card-text text-muted">
                        Get inspired by articles on travel, hobbies, and living your best life.
                    </p>
                    <a asp-action="Index" asp-controller="Post" asp-route-categoryId="3" class="btn btn-sm btn-outline-primary">View Posts</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-10 mx-auto">
            <div class="card bg-light border-0">
                <div class="card-body p-5 text-center">
                    <h3 class="fw-bold mb-3">Join Our Community</h3>
                    <p class="text-muted mb-4">
                        Share your thoughts, comment on posts, and connect with like-minded readers.
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <text>Create an account to get started!</text>
                        }
                        else
                        {
                            <text>Start exploring and engaging with our content!</text>
                        }
                    </p>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Register" asp-controller="Auth" class="btn btn-primary">Sign Up Now</a>
                    }
                    else
                    {
                        <a asp-action="Create" asp-controller="Post" class="btn btn-primary">Create a Post</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
